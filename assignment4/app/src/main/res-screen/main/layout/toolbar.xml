<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trackerLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginStart="0dp">

    <TextView
        android:id="@+id/imagesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryLightColor"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:text="Images:"/>

    <TextView
        android:id="@+id/imagesValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imagesLabel"
        android:text="000" />

    <TextView
        android:id="@+id/threadsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dp"
        android:textColor="@color/secondaryLightColor"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/imagesValue"
        android:text="Threads:"/>

    <TextView
        android:id="@+id/threadsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/threadsLabel"
        android:text="00" />

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dp"
        android:textColor="@color/secondaryLightColor"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/threadsValue"
        android:text="Time:"/>

    <Chronometer
        android:id="@+id/timeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        android:layout_alignBottom="@+id/timeLabel"
        android:layout_toEndOf="@+id/timeLabel" />
        <!--android:text="0:00.0" />-->

    <TextView
        android:id="@+id/strategyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/threadsLabel"
        android:textColor="@color/secondaryLightColor"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:text="Method:"/>

    <TextView
        android:id="@+id/strategyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/strategyLabel"
        android:textColor="@color/primaryTextColor"
        android:layout_below="@+id/threadsLabel"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/strategyLabel"
        android:text="CompletableFutures" />
</RelativeLayout>